{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sync mod to PA",
      "type": "process",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/.vscode/sync-mod.ps1",
        "-DestPath", "${config:anonywho.paModsPath}",
        "-SrcPath", "${workspaceFolder}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
